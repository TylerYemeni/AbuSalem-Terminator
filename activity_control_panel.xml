<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <EditText
        android:id="@+id/inputAttacksPerMinute"
        android:hint="عدد الهجمات في الدقيقة"
        android:textColorHint="#AAAAAA"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text" />

    <EditText
        android:id="@+id/inputAccountsPerAttack"
        android:hint="عدد الحسابات لكل هجوم"
        android:textColorHint="#AAAAAA"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/inputDelayMillis"
        android:hint="التأخير بين الهجمات (مللي ثانية)"
        android:textColorHint="#AAAAAA"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnApplySettings"
        android:text="تطبيق الإعدادات"
        android:textColor="#FFFFFF"
        android:background="#2E8B57"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
</LinearLayout>
